local mouse = game.Players.LocalPlayer:GetMouse()
local clickkill = Instance.new("Tool", game.Players.LocalPlayer:WaitForChild("Backpack"))
clickkill.Name = "Click Kill"
clickkill.RequiresHandle = false

clickkill.Activated:Connect(function()
	local target = mouse.Target
	if target and target.Parent then
		local humanoid = target.Parent:FindFirstChildOfClass("Humanoid")
		if humanoid then
			for _,v in pairs(workspace:GetDescendants()) do
				if v.Name == "InflictTarget" then
					local gun = v
					gun:FireServer(game.Players[humanoid.Parent.Name].Character:FindFirstChildWhichIsA("Humanoid"),game.Players[humanoid.Parent.Name].Character.Head,math.huge)
				end
			end
		end
	end
end)
